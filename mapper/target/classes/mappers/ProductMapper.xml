    <select id="getAllProduct" resultMap="BaseResultMapVO">
    select
        product_id,
        product_name,
        category_id,
        root_category_id,
        sold_num,
        product_status,
        content,
        create_time,
        update_time,
	    id,
		item_id,
		url,
		is_main
        from  product p ,product_img pi
        where p.product_id=pi.id
        order by p.create_time
        desc limit 0,3;

    </select>


