    </resultMap>
    <select id="selectFirstLevelCategories" resultMap="BaseResultMapVo3">
        SELECT
	category_id,
	category_name,
	category_level,
	parent_id,
	category_icon,
	category_slogan,
	category_pic,
	category_bg_color
from category WHERE category_level=1;
