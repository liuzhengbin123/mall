        <result column="parent_id" jdbcType="INTEGER" property="parentId" />
        <result column="category_icon" jdbcType="VARCHAR" property="categoryIcon" />
        <result column="category_slogan" jdbcType="VARCHAR" property="categorySlogan" />
        <result column="category_pic" jdbcType="VARCHAR" property="categoryPic" />
        <result column="category_bg_color" jdbcType="VARCHAR" property="categoryBgColor" />
        <collection column="category_id" property="categoryVoList" select="selectAllByCategory2" />
    </resultMap>
    <select id="selectAllByCategory2" resultMap="s">
        select
        category_id,
        category_name,
        category_level,
        parent_id,
        category_icon,
        category_slogan,
        category_pic,
        category_bg_color
        from category
        where parent_id=#{parentId}

    </select>


