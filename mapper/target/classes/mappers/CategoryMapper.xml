<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lzb.bemall.dao.CategoryMapper">
  <resultMap id="BaseResultMap" type="com.lzb.bemall.entity.Category">
